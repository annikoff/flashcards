<div class="row" id="header">
  <div class="col-sm-12">
    <nav class="navbar navbar-default" id="header">
      <div class="container-fluid">
        <div class="navbar-header">
          <% if current_user %>
            <%= link_to t(:app_name), trainer_path, class: "navbar-brand" %>
          <% else %>
            <%= link_to t(:app_name), root_path, class: "navbar-brand" %>
          <% end %>
        </div>
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <% if current_user %>
            <ul class="nav navbar-nav navbar-left">
              <li><%= link_to t('dashboard.blocks.index.heading'), blocks_path %></li>
              <li><%= link_to t('dashboard.blocks.new.heading'), new_block_path %></li>
              <li><%= link_to t('dashboard.cards.index.heading'), cards_path %></li>
              <li><%= link_to t('dashboard.cards.new.heading'), new_card_path %></li>
            </ul>
          <% end %>
          <p class="navbar-text navbar-right">
            <% if current_user %>
              <%= link_to t('global.actions.edit_profile'),
                          edit_profile_path(current_user),
                          class: 'navbar-link' %> |
              <%= link_to t('global.actions.delete_user'),
                          user_path(current_user),
                          method: :delete, class: 'navbar-link',
                          data: {
                              confirm: t('global.confirmations.deletion')
                          } %> |
              <%= link_to t('global.actions.log_out'), :logout, method: :delete,
                          class: 'navbar-link' %>
            <% else %>
              <%= link_to t('global.actions.sing_up'), new_user_path,
                          class: 'navbar-link' %> |
              <%= link_to t('global.actions.log_in_with_github'),
                          auth_at_provider_path(provider: :github),
                          class: 'navbar-link'%> |
              <%= link_to t('global.actions.log_in'), :login, class: 'navbar-link log_in' %> |
              <% I18n.available_locales.each do |locale| %>
                <%=link_to locale, root_path(user_locale: locale),
                           class: 'navbar-link'%>
              <% end %>
            <% end %>
          </p>
        </div>
      </div>
    </nav>
  </div>
</div>
