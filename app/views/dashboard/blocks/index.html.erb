<h2><%= t('.heading') %></h2>

<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th><%= t(:title_label) %></th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
  <% @blocks.each do |block| %>
    <tr class="table table-hover table-condensed">
      <td><%= block.title %></td>

      <% if block.current? %>
        <td>
          <%= link_to t('.set_as_common'), reset_as_current_block_path(block),
                      method: :put %>
        </td>
      <% else %>
        <td>
          <%= link_to t('.set_as_current'), set_as_current_block_path(block),
                      method: :put %>
        </td>
      <% end %>
      <td><%= link_to t('global.actions.edit'), edit_block_path(block) %></td>
      <td>
        <%= link_to t('global.actions.delete'), block, method: :delete,
                    data: { confirm: t('global.confirmations.deletion') } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
