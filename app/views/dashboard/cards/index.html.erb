<table class="table table-hover table-condensed">
  <thead>
  <tr>
    <th><%= t(:original_text_label) %></th>
    <th><%= t(:translated_text_label) %></th>
    <th><%= t(:review_label) %></th>
    <th colspan="2"></th>
  </tr>
  </thead>
  <tbody>
  <% @cards.each do |card| %>
    <tr class="table table-hover table-condensed">
      <td><%= card.original_text %></td>
      <td><%= card.translated_text %></td>
      <td><%= card.review_date.strftime('%d.%m.%Y %H:%M:%S') %></td>
      <td><%= link_to t(:edit_label), edit_card_path(card) %></td>
      <td><%= link_to t(:delete_label), card, method: :delete,
                      data: { confirm: t(:confirm_deletion) } %></td>
    </tr>
  <% end %>
  </tbody>
</table>