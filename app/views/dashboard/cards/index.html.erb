<h2><%= t('.heading') %></h2>

<table class="table table-hover table-condensed">
  <thead>
    <tr>
      <th><%= t('.original_text') %></th>
      <th><%= t('.translated_text') %></th>
      <th><%= t('.review') %></th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <tbody>
  <% @cards.each do |card| %>
      <tr>
        <td><%= card.original_text %></td>
        <td><%= card.translated_text %></td>
        <td><%= card.review_date.strftime('%d.%m.%Y %H:%M:%S') %></td>
        <td><%= link_to t('global.actions.edit'), edit_card_path(card) %></td>
        <td><%= link_to t('global.actions.delete'), card, method: :delete,
                        data: { confirm: t('global.confirmations.deletion') } %></td>
      </tr>
  <% end %>
  </tbody>
</table>

